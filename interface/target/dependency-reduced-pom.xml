<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>racine</artifactId>
    <groupId>com.dakire.morpion.racine</groupId>
    <version>1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dakire.morpion.interface</groupId>
  <artifactId>interface</artifactId>
  <name>Interface</name>
  <version>1.0</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.dakire.GUI</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <mainClass>com.dakire.Serveur</mainClass>
          <arguments>
            <systemProperties>
              <systemProperty>
                <key>java.net.SocketPermission</key>
                <value>"*", "accept, connect, listen, resolve"</value>
                <key>java.security.AllPermission</key>
              </systemProperty>
            </systemProperties>
          </arguments>
          <classpathScope>compile</classpathScope>
          <resourceBundles>
            <resourceBundle>com.dakire.morpion.shared:shared:1.0</resourceBundle>
          </resourceBundles>
          <archive>
            <manifest>
              <mainClass>com.dakire.GUI</mainClass>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>19</maven.compiler.target>
    <maven.compiler.source>19</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <openjfx.version>19</openjfx.version>
  </properties>
</project>

